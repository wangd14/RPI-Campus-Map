package hw8;

import javafx.scene.Group;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.ScrollPane;
import javafx.scene.image.ImageView;
import javafx.scene.layout.HBox;
import javafx.scene.layout.Pane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Circle;
import javafx.scene.shape.Line;
import javafx.stage.Popup;

public class CampusMapView {
    private final ImageView imageView;
    private final Pane pane;
    private final Button resetButton;
    private final Button zoomInButton;
    private final Button zoomOutButton;
    private final Label messageLabel;

    public CampusMapView(ImageView imageView, Pane pane, Button resetButton, Button zoomInButton, Button zoomOutButton, Label messageLabel) {
        this.imageView = imageView;
        this.pane = pane;
        this.resetButton = resetButton;
        this.zoomInButton = zoomInButton;
        this.zoomOutButton = zoomOutButton;
        this.messageLabel = messageLabel;
    }

    public void addCircle(Circle circle) {
        pane.getChildren().add(circle);
    }

    public void removeCircle(Circle circle) {
        pane.getChildren().remove(circle);
    }

    public void drawPath(Group group) {
        pane.getChildren().add(group);
    }

    public void showMessage(String message) {
        Popup popup = new Popup();
        Label label = new Label(message);
        label.setStyle("-fx-background-color: white; -fx-padding: 10px; -fx-border-color: black; -fx-border-width: 2px;");
        popup.getContent().add(label);
        popup.setAutoHide(true);
        popup.show(pane.getScene().getWindow());
    }

    // Other methods to update the view as needed
}
